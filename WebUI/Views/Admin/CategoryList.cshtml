@model CategoryListModel
@{
    ViewData["Title"] = "Index";
}

<h1>Admin List Category</h1>

@if (Model.Categories.Count() > 0)
{
    
<table class="table table-border">

    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm mr2" href="/admin/editcategory/@item.Id">Edit</a>
                </td>
                <td>

                    <form action="/admin/deletecategory" method="post">
                        
                    <input  type="hidden" name="categoryId" value="@item.Id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>


                </td>
            </tr>
        }

    </tbody>

</table>

}else{
    <div class="alert alert-warning">No Product</div>
}

