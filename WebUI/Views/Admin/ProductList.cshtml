@model ProductListModel
@{
    ViewData["Title"] = "Index";
}

<h1>Admin List Product</h1>

@if (Model.Products.Count() > 0)
{
    
<table class="table table-border">

    <thead>
        <tr>
            <td>Id</td>
            <td>Image</td>
            <td>Name</td>
            <td>Price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td><img src="~/img/@item.ImageUrl" width="80" /> </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-primary btn-sm mr2" href="/admin/products/@item.Id">Edit</a>
                </td>
                <td>

                    <form action="/admin/deleteproduct" method="post">
                        
                    <input  type="hidden" name="productId" value="@item.Id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>


                </td>
            </tr>
        }

    </tbody>

</table>

}else{
    <div class="alert alert-warning">No Product</div>
}

